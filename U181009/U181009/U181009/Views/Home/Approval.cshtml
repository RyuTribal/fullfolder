@model U181009.Models.ConsensualAgreement

@{
    ViewBag.Title = "Approval";
}
<div class="panel panel-success">
    <div class="panel-heading text-center" >
        <h2>Approval</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Name:</label> @Html.TextBoxFor(x => x.Name, new{ @class = "form-control"})
            </div>
            <div class="form-group">
                <label>E-mail:</label>@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Phone Number:</label> @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
                <div class="form-group">
                    <label>Approval:</label> @Html.DropDownListFor(x => x.Approved, new[] {
                   new SelectListItem() {Text="Yes",Value=bool.TrueString},
                   new SelectListItem() {Text="No", Value=bool.FalseString } },"Make a choice",new { @class = "form-control" })
                </div>
                <input class="btn btn-success" type="submit" value="Submit my approval" />


                }
            </div>

